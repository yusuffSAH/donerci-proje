@model MertcanDoner.Models.Address
@{
    ViewData["Title"] = "Adres Ekle";
}

<link rel="stylesheet" href="~/css/address.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="address-container">
    <h2>Yeni Adres Ekle</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            Lütfen eksik alanları doldurun.
        </div>
    }

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Başlık</label>
            <input asp-for="Title" class="form-control" placeholder="Örn: Ev, İş" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Adres</label>
            <textarea asp-for="FullAddress" class="form-control" rows="4" placeholder="Tam adresi yazın"></textarea>
            <span asp-validation-for="FullAddress" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input asp-for="IsDefault" class="form-check-input" />
            <label class="form-check-label">Varsayılan adres olarak kaydet</label>
        </div>
        <button class="btn btn-success mt-3" type="submit">Adresi Kaydet</button>
    </form>
</div>
