@model MertcanDoner.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<h2>@Model.Name</h2>
<p>@Model.Description</p>
<p><strong>Fiyat:</strong> @Model.Price ₺</p>

<form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="productId" value="@Model.Id" />

    <div class="mb-3">
        <label>Malzeme Seç:</label><br />
        @foreach (var option in Model.Options)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="selectedOptions" value="@option.Name" id="@option.Id" />
                <label class="form-check-label" for="@option.Id">@option.Name</label>
            </div>
        }
    </div>

    <div class="mb-3">
        <label>Adet:</label>
        <input type="number" name="quantity" value="1" class="form-control" min="1" />
    </div>

    <button type="submit" class="btn btn-success">Sepete Ekle</button>
</form>
