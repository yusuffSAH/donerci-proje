@{
    ViewData["Title"] = "Restoran Konumu";
}
<h2 class="text-center my-3">@ViewData["Title"]</h2>

<div id="map" style="height: 500px; width: 100%;"></div>

<script>
    function initMap() {
        var konum = { lat: 41.252201751296305, lng: 32.67960509539857 }; // Mertcan Doner

        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 16,
            center: konum
        });

        var marker = new google.maps.Marker({
            position: konum,
            map: map,
            title: 'Dönerci Şubemiz'
        });
    }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8urOlwzMzCdn6iYAJeVkgY3dK1vpbmlk&callback=initMap"
        async defer></script>
