@page
@model IndexModel
@{
    ViewData["Title"] = "Hesap Ayarları";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4">@ViewData["Title"]</h3>
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı girin." disabled />
                            <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control" />
                            <label asp-for="Input.FullName">Ad Soyad</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                     

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Phone" class="form-control" type="tel" placeholder="5XX XXX XX XX" />
                            <label asp-for="Input.Phone">Telefon Numarası</label>
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.8rem 1rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }

    .btn-primary {
        padding: 0.8rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
