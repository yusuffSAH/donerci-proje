@model MertcanDoner.Models.Address
@{
    ViewData["Title"] = "Adres Ekle";
}
<h2>Yeni Adres Ekle</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Lütfen eksik alanları doldurun.
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Adres</label>
        <textarea asp-for="FullAddress" class="form-control"></textarea>
        <span asp-validation-for="FullAddress" class="text-danger"></span>
    </div>
    <div class="form-check mt-2">
        <input asp-for="IsDefault" class="form-check-input" />
        <label class="form-check-label">Varsayılan yap</label>
    </div>
    <button class="btn btn-success mt-3" type="submit">Kaydet</button>
</form>
