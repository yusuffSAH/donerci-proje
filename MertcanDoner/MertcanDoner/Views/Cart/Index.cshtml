@model List<MertcanDoner.Models.CartItem>

<h2>Sepetim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Sepetinizde ürün bulunmamaktadır.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Toplam</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Product?.Price ₺</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product?.Price * item.Quantity) ₺</td>
                    <td>
                        <a asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end">
        <a asp-controller="Payment" asp-action="Index" class="btn btn-success">
            Siparişi Tamamla
        </a>
    </div>
}
